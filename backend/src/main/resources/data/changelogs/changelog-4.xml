<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
                 http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="5" author="mario">
        <createTable tableName="select_offer">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="advert_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="offer_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="expired_date" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="approved" type="boolean" defaultValue="false">
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="advert_id"
                                 baseTableName="select_offer"
                                 constraintName="fk_select_offer_advert"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="advert"/>

        <addForeignKeyConstraint baseColumnNames="offer_id"
                                 baseTableName="select_offer"
                                 constraintName="fk_select_offer_offer"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="offer"/>


    </changeSet>
</databaseChangeLog>