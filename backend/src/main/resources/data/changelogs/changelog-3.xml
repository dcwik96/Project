<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
                 http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="4" author="mario">
        <createTable tableName="offer">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="app_user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="advert_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="offer" type="numeric(15,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addColumn tableName="advert">
            <column name="available" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseColumnNames="app_user_id"
                                 baseTableName="offer"
                                 constraintName="fk_offer_user"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="app_user"/>

        <addForeignKeyConstraint baseColumnNames="advert_id"
                                 baseTableName="offer"
                                 constraintName="fk_offer_advert"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="advert"/>


    </changeSet>
</databaseChangeLog>